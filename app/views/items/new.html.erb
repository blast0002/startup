<div class="top_header">
  <div class="header_arrow"><%= link_to image_tag("back.png"), homes_path %></div>
  <div class="header_text">Sell Products</div>
  <div class="header_img"><%= image_tag "sell.png"%></div>
  <div class="home-line-break"></div>
</div>

<div class="bottom_footer"><div class="prev_button"></div><div class="next_button"></div></div>


<%= render 'form' %>


<script type="text/javascript">
  setTimeout(function() {
    hideNav();
    $('.cont_container').hide();
    $('#cont1').show();
  	var slide = 1;
  	$('.prev_button').hide();

    $('.prev_button').bind('click', function() {
    	$('.cont_container').hide();
    	slide--;
    	$('#cont'+slide).show();
    	if(slide <=1) $('.prev_button').hide();
    });

    $('.next_button').bind('click', function() {
    	$('.cont_container').hide();
    	slide++;
    	$('#cont'+slide).show();
    	$('.prev_button').show();
    });
  },100);


</script>
