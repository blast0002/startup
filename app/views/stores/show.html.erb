
    <% @items.each do |item| %>


    	<div class="store_item">
    		<div class="item-image"> <%= image_tag(item.image.url, :height => 100) %> </div>
    		<div class="item-description"> <b><%= item.description %></b> </div><br />
    		<div class="item-name"> <%= item.name %> - $ <%= item.price %> </div> <br />
			
			
			
    	</div>


    <% end %>